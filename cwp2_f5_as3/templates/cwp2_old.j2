{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.31.0",
        "id": "urn:uuid:{{ lookup('pipe','uuidgen') }}",
        "label": "{{ item.TENANT }}",
        "remark": "Auto-generated by AS3 Config Converter",
        "{{ item.TENANT }}": {
            "class": "Tenant",
            "Shared": {
                "class": "Application",
                "template": "shared",
                "{{ item.TENANT }}": {
                    "remark": "{{ item.TENANT }}",
                    "layer4": "tcp",
                    "pool": {"bigip": "/Common/geneve-tunnel"},
                    "iRules": [
                        {"use": "wordpress_irule"},
                        {"bigip": "/Common/HTTPHeader_TrcParent"}
                    ],
                    "securityLogProfiles": [
                        {"bigip": "/Common/Log all requests"}
                    ],
                    "translateClientPort": "preserve-strict",
                    "translateServerAddress": false,
                    "translateServerPort": false,
                    "class": "Service_HTTP",
                    "profileHTTP": {
                        "bigip": "/Common/http"
                    },
                    "profileTCP": {
                        "bigip": "/Common/tcp"
                    },
                    "profileAnalytics": {
                        "bigip": "/Common/Custom_HTTP_Analytics"
                    },
                    "profileAnalyticsTcp": { 
                        "bigip": "/Common/Custom_TCP_Analytics" 
                    },
                    "virtualAddresses": [
                        "{{ item.VIP_ADDRESS }}"
                    ],
                    "policyWAF": {
                        "use": "wafPolicy"
                    },
                    "virtualPort": 0,
                    "persistenceMethods": [],
                    "snat": "none",
                    "allowVlans": [
                        {
                            "bigip": "geneve"
                        }
                    ]
                },
                "wordpress_irule": {
                    "class": "iRule",
                    "remark": "choose private pool based on IP",
                    "iRule": "when CLIENT_ACCEPTED {\n  if { ( [TCP::local_port] == {{ item.PORT }} ) }{\n       return }\n  else reject\n}"
                },
                "wafPolicy": {
                    "class": "WAF_Policy",
                    "policy": {
                        "text": "{\n  \"policy\": {\n    \"name\":\"AppPolicy01\",\n    \"description\":\"embedded WAF Policy\",\n    \"template\": {\n    \"name\":\"POLICY_TEMPLATE_RAPID_DEPLOYMENT\"\n    }\n    }\n  }"
                    },
                    "ignoreChanges": false
                }
            }
        }
    }
}